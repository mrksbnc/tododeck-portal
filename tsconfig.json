{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "jsx": "preserve",
    "module": "esnext",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": { "@/*": ["./src/*"] },
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
